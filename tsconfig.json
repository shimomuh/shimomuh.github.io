{
  "_comment": "ありがたーく拝借させてもらう。一部オプションの意味理解してない",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "models/*": ["models/*"],
      "actions/*": ["actions/*"],
      "states/*": ["states/*"],
      "containers/*": ["containers/*"]
    }
  },
  "include": [
    "src"
  ]
}
